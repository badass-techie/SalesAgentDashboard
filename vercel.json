{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["db.json"]
      }
    },
    {
      "src": "dist/sales-agent-dashboard/browser/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/server.js"
    },
    {
      "src": "/(.*).js",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "/(.*).css",
      "headers": { "cache-control": "public,max-age=31536000,immutable" }
    },
    {
      "src": "/(.*).html",
      "headers": { "cache-control": "public,max-age=0,must-revalidate" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
